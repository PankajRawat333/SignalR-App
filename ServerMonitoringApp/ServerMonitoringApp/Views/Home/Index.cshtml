<div id="wrapper" class="inner-wrapper" ng-app="app" ng-controller="dashboardController">
    <div class="mobile-nav">

        <ul>
            <li>
                <button class="btn btn-default" ng-click="getServerTime()">Start listening from Server</button>
            </li>
            <li>
                <div>Server:{{vm.machineName}} / Client Connected:{{vm.clientConnected}}&nbsp;</div>
            </li>
        </ul>
    </div>
    <div id="page-wrapper">
        <div class="row">
            <div class="col-lg-3 col-md-6">
                <div class="panel panel-dashboard">
                    <div class="panel-heading">
                        <div class="row">
                            <div class="col-xs-12 text-center">
                                <div class="center">Memory Performance ({{vm.totalMemory}} GB)</div>
                            </div>
                        </div>
                    </div>
                    <div class="panel-body">
                        <div class="huge"><label id="memory">{{vm.memory}}</label>%</div>
                        <div class="clearfix"></div>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-md-6">
                <div class="panel panel-dashboard">
                    <div class="panel-heading">
                        <div class="row">
                            <div class="col-xs-12 text-center">
                                <div class="center">CPU Performance </div>
                            </div>
                        </div>
                    </div>
                    <div class="panel-body">
                        <div class="huge"><label id="cpu">{{vm.cpu}}</label>%</div>
                        <div class="clearfix"></div>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-md-6">
                <div class="panel panel-dashboard">
                    <div class="panel-heading">
                        <div class="row">
                            <div class="col-xs-12 text-center">
                                <div class="center">Disk Performance</div>
                            </div>
                        </div>
                    </div>
                    <div class="panel-body">
                        <div class="huge">NA</div>
                        <div class="clearfix"></div>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-md-6">
                <div class="panel panel-dashboard">
                    <div class="panel-heading">
                        <div class="row">
                            <div class="col-xs-12 text-center">
                                <div class="center">Server Time </div>
                            </div>
                        </div>
                    </div>
                    <div class="panel-body">

                        <div class="huge">{{vm.serverTime}}</div>
                        <div id="Watchdiv"></div>
                        <div class="clearfix"></div>
                    </div>
                </div>
            </div>
        </div>
        <!-- /.row -->
        <!-- /.row -->
        <div class="row">
            <div class="col-lg-8">
                <div class="panel panel-dashboard">
                    <div class="panel-heading">
                        <div class="row">
                            <div class="col-xs-12 text-center">
                                <div class="center">Memory/CPU </div>
                            </div>
                        </div>
                    </div>
                    <!-- /.panel-heading -->

                    <div class="panel-body">
                        <canvas id="smoothie-chart" width="780" height="173"></canvas>
                    </div>

                    <!-- /.panel-body -->
                </div>
                <!-- /.panel -->
                <div class="panel panel-dashboard">
                    <div class="panel-heading">
                        <div class="row">
                            <div class="col-xs-12 text-center">

                                <div class="center">PROCESSES (Top 10) </div>
                            </div>
                        </div>
                    </div>

                    <div class="panel-body">
                        <table class="table table-striped table-bordered table-condensed" ng-if="vm.process.item1.length>0">
                            <thead>
                                <tr>
                                    <th class="text-center">Process ID</th>
                                    <th class="text-center">Name</th>
                                    <th class="text-center">Memory Size</th>
                                    <th class="text-center">Virtual Memory</th>
                                </tr>
                            </thead>
                            <tbody ng-repeat="process in vm.process.item1">
                                <tr>
                                    <td>{{process.id}}</td>
                                    <td>{{process.name}}</td>
                                    <td>{{process.memorySize}}</td>
                                    <td>{{process.virtualMemory}}</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="panel panel-dashboard">
                    <div class="panel-heading">
                        <div class="row">
                            <div class="col-xs-12 text-center">
                                <div class="controls right"><a class="remove"><i class="ion ion-minus-round "></i></a></div>
                                <div class="center">Events (Application (Latest 20))</div>
                            </div>
                        </div>
                    </div>
                    <div class="panel-body">
                        <table class="table table-striped table-bordered table-condensed" ng-if="events.length>0">
                            <thead>
                                <tr>
                                    <th class="text-center">Time</th>
                                    <th class="text-center">Source</th>
                                </tr>
                            </thead>
                            <tbody ng-repeat="event in events">
                                <tr>
                                    <td>{{event.eventTime}}</td>
                                    <td>{{event.source}}</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <!-- /.panel-body -->
                </div>
            </div>
        </div>
    </div>
</div>